<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="edu.rosehulman.mercury.mercurycontroller"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-feature
        android:name="android.hardware.usb.UsbAccessory"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED"
                android:resource="@xml/usb_accessory_filter" />
        </activity>
        <!-- below is adapted from https://gist.github.com/vikrum/6170193#file-androidmanifest-xml -->
        <!-- A background service to listen to the Firebase -->
        <service
            android:name=".MercuryFirebaseService"
            android:exported="false"
            android:process=":remote">
            <intent-filter>
                <action android:name="edu.rosehulman.mercury.controller.MercuryFirebaseService" />
            </intent-filter>
        </service>
        <!-- Start the service at boot -->
        <!--<receiver android:name=".FirebaseBootStarter">-->
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.BOOT_COMPLETED" />-->
            <!--</intent-filter>-->
        <!--</receiver>-->

    </application>

</manifest>
